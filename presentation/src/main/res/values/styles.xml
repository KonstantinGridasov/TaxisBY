<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ItemLayout">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60sp</item>
        <!--<item name="android:background">@drawable/item_border</item>-->
        <item name="android:gravity">center</item>

    </style>

    <style name="ItemID">
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/Yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemName">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/White</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
